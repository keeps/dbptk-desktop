{
  "name": "dbptk-desktop",
  "description": "Database Preservation Toolkit",
  "version": "3.0.0",
  "dbvtkVersion": "3.0.0",
  "author": "Luis Faria <lfaria@keep.pt>",
  "main": "./app/app.js",
  "build": {
    "appId": "com.database-preservation.gui",
    "artifactName": "${name}-${version}.${ext}",
    "files": [
      "**/*",
      "!resources/*",
      "!dist/*"
    ],
    "directories": {
      "buildResources": "buildResources"
    },
    "mac": {
      "files": [
        "resources/jre/mac/${arch}/**/*",
        "resources/war/dbvtk.war",
        "resources/solr/**/*",
        "buildResources/*"
      ],
      "category": "public.app-category.utilities",
      "asarUnpack": [
        "resources/jre/mac/${arch}",
        "resources/war/dbvtk.war",
        "resources/solr/**/*"
      ],
      "icon": "icon.icns"
    },
    "linux": {
      "files": [
        "resources/jre/linux/${arch}/**/*",
        "resources/war/dbvtk.war",
        "resources/solr/**/*",
        "buildResources/*"
      ],
      "target": [
        "AppImage",
        "snap"
      ],
      "asarUnpack": [
        "resources/jre/linux/${arch}",
        "resources/war/dbvtk.war",
        "resources/solr/"
      ],
      "icon": "icon.png"
    },
    "snap": {
      "plugs": [
        "desktop",
        "desktop-legacy",
        "wayland",
        "unity7",
        "browser-support",
        "cups-control",
        "gsettings",
        "home",
        "network",
        "opengl",
        "removable-media",
        "optical-drive"
      ]
    },
    "win": {
      "files": [
        "resources/jre/windows/${arch}/**/*",
        "resources/war/dbvtk.war",
        "resources/solr/**/*",
        "buildResources/*"
      ],
      "target": [
        {
          "target": "nsis",
          "arch": [
            "ia32",
            "x64"
          ]
        }
      ],
      "asarUnpack": [
        "resources/jre/windows/${arch}",
        "resources/war/dbvtk.war",
        "resources/solr/"
      ],
      "icon": "icon.ico"
    },
    "publish": [
      {
        "provider": "github",
        "owner": "keeps",
        "repo": "dbptk-desktop"
      }
    ]
  },
  "scripts": {
    "start": "./node_modules/.bin/electron .",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist-lw": "electron-builder -lw",
    "preinstall": "bash build.sh",
    "snap": "electron-builder --linux snap"
  },
  "license": "LGPL-3.0-or-later",
  "devDependencies": {
    "electron": "^31.2.1",
    "electron-builder": "^24.13.3",
    "@electron/packager": "^18.3.3"
  },
  "dependencies": {
    "electron-log": "^5.1.6",
    "electron-settings": "^4.0.4",
    "electron-updater": "^6.2.1",
    "tmp": "^0.2.3",
    "tree-kill": "^1.2.2",
    "wait-on": "^7.2.0"
  }
}
